
<p id="notice" class="alert" role="alert"><%= notice %></p>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Documents</h1>
    <%= link_to 'New User Doc', new_user_doc_path, class: "btn btn-primary" %>
</div>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Doc type</th>
      <th>Attachment</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_docs.each do |user_doc| %>
      <tr>
        <td><%= user_doc.doc_type %></td>
        <td><%= link_to "Download", rails_blob_url(user_doc.attachment, disposition: "attachment") if user_doc.attachment.attached? %></td>
        <td><%= user_doc.user.full_name %></td>
        <td>
          <%= link_to 'Show', user_doc, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_user_doc_path(user_doc), class: "btn btn-primary" %>
          <%= link_to 'Delete', user_doc, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


